<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Download List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://files.catbox.moe/yg48xk.jpg') no-repeat center center fixed;
            background-size: cover;
            color: white;
            font-family: Arial, sans-serif;
        }
        .container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 20px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
        table {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(8px);
        }
        .table-hover tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }
        .truncate {
            max-width: 200px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .btn-download {
            background-color: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            border: 1px solid white;
            color: white;
            padding: 5px 15px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }
        .btn-download:hover {
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Download File List</h1>
        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover table-bordered align-middle">
                <thead>
                    <tr>
                        <th scope="col">Nama File</th>
                        <th scope="col">Mimetype</th>
                        <th scope="col">Size (MB)</th>
                        <th scope="col">Download</th>
                    </tr>
                </thead>
                <tbody>
                    <% files.forEach(file => { %>
                    <tr>
                        <td class="truncate"><%= file.name.length > 30 ? file.name.substring(0, 30) + '...' : file.name %></td>
                        <td><%= file.contentType %></td>
                        <td><%= (file.size / (1024 * 1024)).toFixed(2) %> MB</td>
                        <td>
                            <a href="/download?url=<%= encodeURIComponent(file.url) %>&name=<%= encodeURIComponent(file.name) %>&contentType=<%= encodeURIComponent(file.contentType) %>" class="btn-download">Download</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
